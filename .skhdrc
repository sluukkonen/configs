# open terminal
shift + alt - return : alacritty msg create-window || alacritty

# focus space
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9
ctrl - 0 : yabai -m space --focus 10

# focus window
alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

# focus display
alt + ctrl -h : yabai -m display --focus west
alt + ctrl- l : yabai -m display --focus east

# move window
shift + alt - h : yabai -m window --warp west
shift + alt - j : yabai -m window --warp south
shift + alt - k : yabai -m window --warp north
shift + alt - l : yabai -m window --warp east

# move window to display
shift + alt + ctrl - h : yabai -m window --display west; yabai -m display --focus west
shift + alt + ctrl - l : yabai -m window --display east; yabai -m display --focus east

# move window to desktop and follow focus
shift + alt - 1 : yabai -m window --space  1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space  2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space  3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space  4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space  5; yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space  6; yabai -m space --focus 6
shift + alt - 7 : yabai -m window --space  7; yabai -m space --focus 7
shift + alt - 8 : yabai -m window --space  8; yabai -m space --focus 8
shift + alt - 9 : yabai -m window --space  9; yabai -m space --focus 9
shift + alt - 0 : yabai -m window --space 10; yabai -m space --focus 10


# increase window size
shift + cmd - h : yabai -m window --ratio rel:-0.1
shift + cmd - l : yabai -m window --ratio rel:0.1

# window layout toggles
shift + alt - d     : yabai -m window --toggle zoom-parent
shift + alt - space : yabai -m window --toggle zoom-fullscreen
shift + alt - f     : yabai -m window --toggle float
shift + alt - n     : yabai -m window --toggle split
shift + alt - 0x18  : yabai -m space --balance

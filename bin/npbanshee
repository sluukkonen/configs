#!/usr/bin/env python

import dbus

bus = dbus.SessionBus()
banshee = bus.get_object("org.bansheeproject.Banshee", "/org/bansheeproject/Banshee/PlayerEngine")

if banshee and banshee.GetCurrentState() == 'playing':
    track = banshee.GetCurrentTrack()
    print "%s: %s - %s" % (track['artist'].encode("utf-8"),
                           track['album'].encode("utf-8"),
                           track['name'].encode("utf-8"))

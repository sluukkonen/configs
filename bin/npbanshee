#!/usr/bin/env python

import dbus

bus = dbus.SessionBus()
banshee = bus.get_object("org.bansheeproject.Banshee", "/org/bansheeproject/Banshee/PlayerEngine")

if banshee:
        currentTrack = banshee.GetCurrentTrack()
        state = banshee.GetCurrentState()
        if state == 'playing':
            print ("np: " + currentTrack['artist'] + ": " +
                    currentTrack['album'] + " - " +
                    currentTrack['name']).encode('iso-8859-1')

# General options
fs=1                            # Fullscreen.
lavdopts:threads=4              # 4 threads.
ao=pulse,alsa,oss               # Audio output, try pulseaudio first.
stop-xscreensaver= "yes"        # Disable screensaver.

# Subtitle options
fontconfig=yes
ass=yes
embeddedfonts=yes
ass-color=FFFFFF00              # White subtitles
ass-border-color=00000000       # Black outline
ass-hinting=2                   # Freetype autohinter

# Try to use VDPAU if possible
vo=vdpau,xv,
vc=ffh264vdpau,ffmpeg12vdpau,
